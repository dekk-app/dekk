{
  "name": "dekk",
  "version": "1.0.0-0",
  "private": true,
  "description": "A presentation tool written in react.js",
  "license": "MIT",
  "author": "Gregor Adams <greg@pixelass.com>",
  "repository": "git@github.com:sinnerschrader/dekk.git",
  "scripts": {
    "babel": "lerna run babel",
    "babel:watch": "lerna run babel:watch --parallel",
    "bootstrap": "lerna bootstrap",
    "build": "cross-env NODE_ENV=production webpack",
    "clean": "lerna clean",
    "clean:root": "rimraf node_modules",
    "clean:all": "npm run clean:root ; npm run clean",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "develop": "npm-run-all --parallel babel:watch watch",
    "docgen": "esdoc",
    "docs": "open docs/api/index.html",
    "format:js": "lerna run format:js",
    "lint": "lerna run lint --concurrency",
    "prepublish": "npm run babel",
    "publish": "lerna publish --conventional-commits",
    "publish:preview": "npm run babel && lerna publish --cd-version=prerelease --conventional-commits",
    "prepush": "npm run test",
    "test": "lerna run test --concurrency",
    "watch": "webpack-dev-server --hot"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "styled-components": "^3.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.0.2",
    "@commitlint/config-conventional": "^6.0.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-styled-components": "^1.5.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "cross-env": "^5.1.3",
    "esdoc": "^1.0.4",
    "esdoc-brand-plugin": "^1.0.0",
    "esdoc-custom-theme": "^1.3.4",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-importpath-plugin": "^1.0.1",
    "esdoc-inject-style-plugin": "^1.0.0",
    "esdoc-jsx-plugin": "^1.0.0",
    "esdoc-lint-plugin": "1.0.1",
    "esdoc-publish-html-plugin": "^1.1.0",
    "esdoc-react-plugin": "^1.0.1",
    "esdoc-standard-plugin": "^1.0.0",
    "favicons-webpack-plugin": "^0.0.7",
    "html-webpack-harddisk-plugin": "^0.1.0",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "lerna": "^2.5.1",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1"
  },
  "workspaces": [
    "@dekk/*"
  ]
}
