{
  "name": "@dekk/text",
  "version": "1.0.0-5",
  "license": "MIT",
  "author": "Gregor Adams <greg@pixelass.com>",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "scripts": {
    "babel": "npm run clean && cross-env NODE_ENV=production babel src --out-dir lib --copy-files",
    "babel:watch": "npm run clean && babel src --out-dir lib --copy-files -w -s",
    "clean": "rimraf lib",
    "format:js": "prettier --write src/**/*.js",
    "lint": "xo 'src/**/*.js'",
    "test": "ava",
    "posttest": "npm run lint"
  },
  "dependencies": {
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-syntax-highlighter": "^7.0.0",
    "styled-components": "^3.1.6"
  },
  "devDependencies": {
    "@dekk/config-babel": "^1.0.0-5",
    "@dekk/config-prettier": "^1.0.0-5",
    "@dekk/config-xo": "^1.0.0-5",
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-register": "^6.26.0",
    "cross-env": "^5.1.3",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "xo": "^0.20.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "extends": [
      "@ava/stage-4"
    ],
    "require": [
      "babel-register"
    ],
    "tap": true
  },
  "xo": {
    "prettier": true,
    "extends": [
      "../config-xo/config.json"
    ]
  }
}
