{
  "name": "@dekk/deck",
  "version": "1.0.0-5",
  "license": "MIT",
  "author": "Gregor Adams <greg@pixelass.com>",
  "main": "lib/index.js",
  "scripts": {
    "babel": "cross-env NODE_ENV=production babel src --out-dir lib --copy-files",
    "babel:watch": "babel src --out-dir lib --copy-files -w -s",
    "format:js": "prettier --write src/**/*.js",
    "lint": "xo 'src/**/*.js'",
    "test": "ava",
    "posttest": "yarn lint"
  },
  "dependencies": {
    "@dekk/countdown": "^1.0.0-5",
    "@dekk/icon": "^1.0.0-5",
    "@dekk/slide": "^1.0.0-5",
    "@dekk/store": "^1.0.0-5",
    "@dekk/utils": "^1.0.0-5",
    "mobx-react": "^4.4.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "styled-components": "^3.1.6"
  },
  "devDependencies": {
    "@dekk/fragment": "^1.0.0-5",
    "@dekk/image": "^1.0.0-5",
    "@dekk/master": "^1.0.0-5",
    "@dekk/slide": "^1.0.0-5",
    "@dekk/speaker-notes": "^1.0.0-5",
    "@dekk/text": "^1.0.0-5",
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-styled-components": "^1.5.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "cross-env": "^5.1.3",
    "prettier": "^1.10.2",
    "xo": "^0.20.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "xo": {
    "prettier": true,
    "parser": "babel-eslint",
    "rules": {
      "no-unused-vars": 0,
      "no-useless-constructor": 0
    }
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "source": [
      "src/*.{js}"
    ],
    "extends": [
      "@ava/stage-4"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit",
    "tap": true
  }
}
